<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/of"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
            android:id="@+id/aview"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/black"
        />

    <FrameLayout
            android:layout_marginStart="30dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/aview"
            app:layout_constraintStart_toEndOf="@id/aview"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/black">

        <okik.tech.myapplication.DialogOriginTriangle
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:Orientation="left"
                android:layout_marginTop="39dp"
                app:YOriginOffsetPercent="1"
                android:layout_gravity="left" />

        <okik.tech.myapplication.RoundContainer
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp" >

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="64dp"
                    android:maxLines="8"
                    android:text="Some text I dont care about would bln bln bln nl nlm"/>

            <Button
                    android:id="@+id/tb"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="An Action"/>
        </okik.tech.myapplication.RoundContainer>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>